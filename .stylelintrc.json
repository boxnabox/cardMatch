{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-prettier",
        "stylelint-prettier/recommended"
    ],
    "rules": {
        "declaration-empty-line-before": "never",
        "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(_([a-z0-9]+-?)+){0,2}$"
    }
}
